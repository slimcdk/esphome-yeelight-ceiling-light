<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:topRightRadius="5px" android:bottomRightRadius="5px"/>
                    <solid android:color="#aeaeae"/>
                    <stroke android:width="1px" android:color="#aeaeae"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:topRightRadius="5px" android:bottomRightRadius="5px"/>
                    <solid android:color="@color/global_transparent"/>
                    <stroke android:width="1px" android:color="#aeaeae"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
