<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:fitsSystemWindows="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@+id/content_top" android:layout_width="match_parent" android:layout_height="400dp">
                <View android:background="@drawable/reset_guide_bg" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <ImageView android:id="@+id/product_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/reset_guide_luna" android:scaleType="centerCrop"/>
            </FrameLayout>
            <TextView android:textSize="20sp" android:textColor="@color/common_text_color_primary_33" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/reset_your_device" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/common_text_color_primary_33" android:gravity="start" android:id="@+id/sub_info" android:paddingLeft="40dp" android:paddingRight="40dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:lineSpacingMultiplier="1.4"/>
            <View android:layout_width="match_parent" android:layout_height="145dp"/>
        </LinearLayout>
    </ScrollView>
    <com.yeelight.yeelib.p194ui.view.CommonTitleBar android:id="@+id/title_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" app:bottomDividerVisible="false" app:leftButtonResource="@drawable/icon_back_black" app:leftButtonVisible="true"/>
    <FrameLayout android:background="@drawable/icon_yeelight_reset_device_btn_bg" android:layout_width="match_parent" android:layout_height="145dp" android:layout_alignParentBottom="true">
        <Button android:textSize="@dimen/font_size_14sp" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/next" android:background="@drawable/round_btn_red" android:layout_width="240dp" android:layout_height="39dp" android:layout_marginTop="42dp" android:text="@string/personality_light_select_next_step" android:textAllCaps="false" style="?android:attr/borderlessButtonStyle"/>
    </FrameLayout>
</RelativeLayout>
