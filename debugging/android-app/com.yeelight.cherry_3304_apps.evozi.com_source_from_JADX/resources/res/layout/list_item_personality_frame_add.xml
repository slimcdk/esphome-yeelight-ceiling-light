<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/padding_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="14dp"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="62dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/add_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:minHeight="62dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
            <com.yeelight.yeelib.p194ui.view.TimelineView android:layout_gravity="center_vertical" android:id="@+id/layout_time_line" android:layout_width="20dp" android:layout_height="match_parent" android:layout_marginEnd="20dp"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_add_frame" android:background="@drawable/common_corner_rectangle_dash" android:layout_width="match_parent" android:layout_height="50dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_yeelight_personality_light_add" android:layout_marginEnd="22dp"/>
                <TextView android:textSize="16sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personality_light_add_frame"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/common_text_color_description_99" android:gravity="center" android:id="@+id/can_not_add_tips" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/personality_light_can_not_add_tips"/>
    </FrameLayout>
</LinearLayout>
