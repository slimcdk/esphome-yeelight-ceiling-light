<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/common_color_secondary_white_f8" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.yeelight.yeelib.p194ui.view.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:backgroundTranslucent="true" app:leftButtonResource="@drawable/icon_yeelight_back_black" app:leftButtonVisible="true" app:rightButtonVisible="false" app:textColor="@color/setting_item_theme_text_color"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_device" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" style="@style/tasker_item_style.title">
            <TextView android:layout_gravity="center_vertical" android:id="@+id/bright_title" android:text="Bright" style="@style/tasker_text_style.title"/>
            <TextView android:layout_gravity="center_vertical" android:id="@+id/bright_content" android:paddingLeft="20dp" android:text="50%" style="@style/tasker_text_style.title"/>
        </LinearLayout>
        <TextView style="@style/horizontal_line"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_device_info" android:paddingLeft="10dp" style="@style/tasker_item_style.content">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/bright_minus" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginRight="10dp" android:src="@drawable/drawable_minus"/>
            <ProgressBar android:id="@+id/bright_progress" android:layout_width="0dp" android:layout_height="6dp" android:progressDrawable="@drawable/progress_bar_yeelight" android:layout_weight="1" style="@style/Widget.ProgressBar.Horizontal"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/bright_plus" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginRight="5dp" android:src="@drawable/drawable_plus"/>
        </LinearLayout>
        <TextView style="@style/horizontal_line"/>
    </LinearLayout>
</LinearLayout>
