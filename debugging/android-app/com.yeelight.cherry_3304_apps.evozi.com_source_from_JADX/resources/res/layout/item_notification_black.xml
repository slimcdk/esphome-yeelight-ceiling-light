<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/app_widget_layout" android:background="@color/black_20_transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/widget_change_lv_color" android:background="@drawable/icon_yeelight_widget_skin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="15dp"/>
        <ImageView android:layout_gravity="center" android:id="@+id/widget_image_logo_view" android:background="@drawable/logo_white" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ProgressBar android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/widget_progress_refresh" android:layout_width="21dp" android:layout_height="21dp" android:maxWidth="21dp" android:maxHeight="21dp" android:layout_marginEnd="15dp"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/widget_image_refresh" android:background="@drawable/icon_yeelight_refresh" android:layout_marginEnd="15dp" style="@style/title_bar_btn_style"/>
    </FrameLayout>
    <ImageView android:background="@color/white_30_transparent" android:layout_width="match_parent" android:layout_height="1px"/>
    <ListView android:id="@+id/app_widget_lv" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
