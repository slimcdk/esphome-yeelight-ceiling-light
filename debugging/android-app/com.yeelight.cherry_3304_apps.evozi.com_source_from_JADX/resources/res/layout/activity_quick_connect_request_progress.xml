    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/view_corner_quickconnect_progress_bg" android:layout_width="109dp" android:layout_height="109dp" android:layout_centerInParent="true">
        <ProgressBar android:layout_gravity="center_horizontal" android:id="@+id/request_progress" android:layout_width="31dp" android:layout_height="31dp" android:layout_marginBottom="23dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progressbar_rotate"/>
        <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/quickconnect_request_network" android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>
