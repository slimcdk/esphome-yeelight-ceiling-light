<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/common_color_secondary_white_e6" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/content_top" android:background="@drawable/transparent" android:layout_width="0dp" android:layout_height="0dp" app:layout_heightPercent="57%" app:layout_widthPercent="100%">
        <LinearLayout android:id="@+id/ssid_layout" android:layout_marginBottom="10dp" style="@style/connect_input_bg">
            <ImageView android:id="@+id/ssid_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_bluetooth" android:scaleType="center" android:layout_marginStart="5dp"/>
            <EditText android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/et_ssid" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/mesh_add_network_name_hint" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="10dp" style="@style/connect_input_bg">
            <ImageView android:id="@+id/pwd_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_key" android:scaleType="center" android:layout_marginStart="5dp"/>
            <EditText android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/et_pwd" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/mesh_add_pwd_hint" android:singleLine="true" android:layout_weight="1" android:inputType="textPassword"/>
        </LinearLayout>
    </LinearLayout>
    <com.yeelight.yeelib.p194ui.view.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:bottomDividerVisible="false" app:leftButtonResource="@drawable/icon_back_black" app:leftButtonVisible="true" app:textColor="@color/title_bar_text_color"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/content_top" app:layout_heightPercent="43%">
        <TextView android:textSize="19sp" android:textColor="@color/common_text_color_secondary_66" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/mesh_add_network_title" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/common_text_color_primary_33" android:gravity="left" android:id="@+id/sub_info" android:paddingLeft="40dp" android:paddingRight="40dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/mesh_add_network_desc" android:lineSpacingMultiplier="1.3"/>
        <androidx.percentlayout.widget.PercentFrameLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:enabled="false" android:textSize="@dimen/font_size_14sp" android:textColor="@color/white" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/next" android:background="@drawable/round_btn_red" android:layout_width="0dp" android:layout_height="39dp" android:text="@string/common_text_complete" android:layout_below="@+id/fill_layout" android:layout_centerHorizontal="true" app:layout_marginBottomPercent="30%" app:layout_widthPercent="63%" style="?android:attr/borderlessButtonStyle"/>
            <TextView android:textSize="@dimen/font_size_14sp" android:textColor="#2f60c6" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/btn_search_exist" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mesh_group_connect_exist" android:layout_alignParentBottom="true" app:layout_marginBottomPercent="10%"/>
        </androidx.percentlayout.widget.PercentFrameLayout>
    </LinearLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>
