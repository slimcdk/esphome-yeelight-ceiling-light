<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingLeft="23dp" android:paddingRight="23dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:gravity="center_vertical" android:id="@+id/item_light_alarm_time" android:text="@string/alarm_disable" android:layout_centerVertical="true" style="@style/alarm_text_style"/>
    <TextView android:id="@+id/item_light_alarm_divide_vertical" android:background="@color/common_setting_item_text_color" android:layout_width="1px" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/item_light_alarm_time" android:layout_centerVertical="true" android:alpha="0.5"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/item_light_alarm_content" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toRightOf="@+id/item_light_alarm_divide_vertical" android:layout_centerVertical="true">
        <TextView android:textSize="12sp" android:id="@+id/item_light_alarm_type" android:layout_width="wrap_content" android:layout_height="0dp" android:text="开灯" android:layout_weight="1" android:alpha="0.5"/>
        <TextView android:textSize="12sp" android:id="@+id/item_light_alarm_repeat" android:layout_width="wrap_content" android:layout_height="0dp" android:text="仅一次" android:layout_weight="1" android:alpha="0.5"/>
        <TextView android:textSize="12sp" android:id="@+id/item_light_alarm_unused" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="0dp" android:text="未启用" android:layout_weight="1" android:alpha="0.5"/>
    </LinearLayout>
    <ImageView android:id="@+id/item_light_alram_switch" android:background="#01ffffff" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/setting_switch_off" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <View android:background="@color/black_50_transparent" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
