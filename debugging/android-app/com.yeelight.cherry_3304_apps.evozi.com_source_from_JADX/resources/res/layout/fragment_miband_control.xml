<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextSwitcher android:textSize="@dimen/common_title_text_size" android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="55dp" android:text="@string/common_text_mi_band"/>
    <TextView android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:text="@string/mi_band_bind_sub_text_bind" android:alpha="0.6"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ImageView android:id="@+id/miband_control_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/miband_control_large_icon" android:scaleType="fitCenter" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/login_content_text_size" android:textColor="@color/text_white" android:gravity="center" android:autoLink="all" android:id="@+id/mi_band_open_broadcast" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true" android:alpha="0.6"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/text_white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="60dp" android:text="@string/common_text_settings"/>
        <TextView style="@style/horizontal_line.padding"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/switchlayout" android:clickable="true" style="@style/setting_click_item_style">
                <TextView android:gravity="left" android:id="@+id/switch_text" android:layout_marginLeft="0dp" android:text="@string/mi_band_bind_autoclose" style="@style/setting_text_style"/>
            </LinearLayout>
            <ImageView android:id="@+id/image_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="23dp" android:src="@drawable/setting_switch_on" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView style="@style/horizontal_line.padding"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/bindlayout" android:clickable="true" style="@style/setting_click_item_style">
                <TextView android:gravity="left" android:id="@+id/bind_text" android:layout_marginLeft="0dp" android:text="@string/mi_band_bind_unbindtext" android:alpha="1" style="@style/setting_text_style"/>
            </LinearLayout>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="23dp" android:src="@drawable/common_item_more" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
