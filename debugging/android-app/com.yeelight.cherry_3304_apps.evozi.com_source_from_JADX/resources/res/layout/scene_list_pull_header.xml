<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:gravity="bottom" android:id="@+id/pull_header" android:layout_width="match_parent" android:layout_height="0dp">
        <ImageView android:layout_gravity="top" android:id="@+id/img_bkg" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop"/>
        <LinearLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/pull_header_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:id="@+id/empty_view" android:layout_width="match_parent" android:layout_height="0dp"/>
            <LinearLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <FrameLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="@dimen/pull_down_header_height">
                    <ProgressBar android:layout_gravity="center_vertical" android:id="@+id/pull_header_prog" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:indeterminate="true" style="@style/circle_progressbar_large"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/pull_header_indc" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/common_refresh_arrow" android:scaleType="fitCenter"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
