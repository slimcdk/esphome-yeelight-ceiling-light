<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/item_light_alarm_layout" android:paddingLeft="23dp" android:paddingRight="23dp" android:layout_width="match_parent" android:layout_height="76dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/item_light_alarm_content" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_alignParentStart="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="22sp" android:textColor="@color/item_alarm_time_color" android:id="@+id/item_light_alarm_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="8dp"/>
            <TextView android:textSize="10sp" android:textColor="@color/item_alarm_action_color" android:id="@+id/item_light_alarm_time_action" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:alpha="0.8">
            <TextView android:textSize="12sp" android:textColor="@color/item_alarm_action_color" android:gravity="top" android:id="@+id/item_light_alarm_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="50dp" android:singleLine="true"/>
            <View android:background="@color/item_alarm_action_color" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:layout_marginTop="4dp" android:layout_marginRight="3dp" android:layout_marginBottom="4dp"/>
            <TextView android:textSize="12sp" android:textColor="@color/item_alarm_action_color" android:gravity="top" android:id="@+id/item_light_alarm_repeat" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxWidth="150dp" android:singleLine="true"/>
            <View android:id="@+id/item_light_alarm_scene_name_divider" android:background="@color/item_alarm_action_color" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:layout_marginTop="4dp" android:layout_marginRight="3dp" android:layout_marginBottom="4dp"/>
            <TextView android:textSize="12sp" android:textColor="@color/item_alarm_action_color" android:gravity="top" android:id="@+id/item_light_alarm_scene_name" android:layout_width="60dp" android:layout_height="match_parent" android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="7dp" android:layout_marginBottom="5dp" android:layout_alignParentEnd="true">
        <com.yeelight.yeelib.p142ui.view.YeelightSwitchButton android:layout_gravity="center_vertical" android:id="@+id/item_light_alarm_switch" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:background="@color/black_50_transparent" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
