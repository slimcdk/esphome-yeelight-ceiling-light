<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/common_color_secondary_white_f8" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="ifContentScrolls">
    <com.yeelight.yeelib.p142ui.view.CommonTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="wrap_content" app:bottomDividerColor="@color/divider_line_color" app:bottomDividerVisible="true" app:leftButtonResource="@drawable/icon_yeelight_back_black" app:leftButtonVisible="true"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:background="@color/common_color_secondary_white_f8" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_top" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="4">
                <TextView android:textSize="13sp" android:textColor="@color/common_text_color_description_99" android:gravity="left|center_vertical|center_horizontal|center" android:paddingLeft="21dp" android:layout_width="match_parent" android:layout_height="38dp" android:text="@string/feedback_label_description"/>
                <View style="@style/horizontal_line_v3"/>
                <EditText android:textSize="@dimen/font_size_14sp" android:textColorHint="@color/common_text_color_not_clickable_cc" android:gravity="left" android:id="@+id/et_question" android:background="@color/white" android:paddingLeft="21dp" android:paddingTop="10dp" android:paddingRight="21dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="0dp" android:hint="@string/feedback_info_hint" android:lines="7" android:layout_weight="1" android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="6" android:layout_below="@+id/layout_top">
                <TextView android:textSize="13sp" android:textColor="@color/common_text_color_description_99" android:gravity="left|center_vertical|center_horizontal|center" android:paddingLeft="21dp" android:layout_width="match_parent" android:layout_height="38dp" android:text="@string/feedback_label_select_question_type"/>
                <View style="@style/horizontal_line_v3"/>
                <FrameLayout android:id="@+id/question_type_layout" android:background="@drawable/item_click_background" android:layout_width="match_parent" android:layout_height="44dp">
                    <TextView android:textSize="15sp" android:textColor="@color/common_text_color_primary_33" android:gravity="left|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:paddingLeft="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_label_question_type"/>
                    <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/common_text_color_primary_33" android:textColorHint="@color/common_text_color_not_clickable_cc" android:gravity="center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_question_type" android:paddingRight="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/feedback_select_none"/>
                </FrameLayout>
                <View style="@style/horizontal_line_v3"/>
                <TextView android:textSize="13sp" android:textColor="@color/common_text_color_description_99" android:gravity="left|center_vertical|center_horizontal|center" android:paddingLeft="21dp" android:layout_width="match_parent" android:layout_height="38dp" android:text="@string/feedback_label_optional_info"/>
                <View style="@style/horizontal_line_v3"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/device_type_layout" android:background="@drawable/item_click_background" android:layout_width="match_parent" android:layout_height="44dp">
                    <TextView android:textSize="15sp" android:textColor="@color/common_text_color_primary_33" android:gravity="left|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_label_device_type" android:paddingStart="21dp"/>
                    <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/common_text_color_primary_33" android:textColorHint="@color/common_text_color_not_clickable_cc" android:ellipsize="end" android:gravity="end" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_device_type" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/feedback_select_none" android:singleLine="true" android:layout_weight="1" android:paddingStart="21dp" android:paddingEnd="21dp"/>
                </LinearLayout>
                <View android:layout_marginLeft="21dp" style="@style/horizontal_line_v3"/>
                <FrameLayout android:id="@+id/contact_layout" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="44dp">
                    <TextView android:textSize="15sp" android:textColor="@color/common_text_color_primary_33" android:gravity="left|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:paddingLeft="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback_label_contact"/>
                    <EditText android:textSize="@dimen/font_size_15sp" android:textColor="@color/common_text_color_primary_33" android:textColorHint="@color/common_text_color_not_clickable_cc" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/et_contact" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="100dp" android:layout_marginRight="21dp" android:hint="@string/feedback_contact_hint_v3" android:singleLine="true"/>
                </FrameLayout>
                <View style="@style/horizontal_line_v3"/>
                <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                    <Button android:enabled="false" android:textColor="@color/white" android:id="@+id/btn_submit" android:background="@drawable/round_btn_red" android:layout_width="match_parent" android:layout_height="39dp" android:text="@string/feedback_commit" android:layout_centerHorizontal="true" android:textAllCaps="false" android:layout_marginStart="68dp" android:layout_marginEnd="68dp" style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
