<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/setting_title_bar_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/btn_title_bar_left" android:paddingLeft="7dp" android:paddingTop="3dp" android:paddingRight="7dp" android:paddingBottom="3dp" android:src="@drawable/icon_yeelight_back_black" android:layout_centerVertical="true" android:paddingHorizontal="7dp" android:paddingVertical="3dp" style="@style/title_bar_btn_style"/>
        <TextView android:textColor="@color/setting_item_theme_text_color" android:id="@+id/text_title" android:layout_width="wrap_content" android:maxWidth="220dp" android:layout_centerInParent="true" style="@style/yeelight_badge_text_style"/>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:paddingEnd="20dp" android:layout_alignStart="@+id/text_title" android:layout_alignParentEnd="true">
            <TextView android:textSize="12sp" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/tile_bar_right_text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="100dp" android:singleLine="true" android:layout_marginStart="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/tile_bar_bottom_divider" android:background="@color/common_divider_line_title_bottom_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    <ProgressBar android:id="@+id/pb_loading" android:layout_width="match_parent" android:layout_height="2dp" android:progressDrawable="@drawable/progress_bar_common" style="?android:attr/progressBarStyleHorizontal"/>
    <WebView android:id="@+id/layout_webview" android:background="@color/setting_bg_color" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_x="0dp" android:layout_y="0dp" android:layout_weight="1"/>
</LinearLayout>
