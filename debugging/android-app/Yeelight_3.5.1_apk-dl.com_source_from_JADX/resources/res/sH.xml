<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@color/white" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/device_icon" android:layout_width="58dp" android:layout_height="58dp"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_weight="1">
        <TextView android:textSize="@dimen/font_size_15sp" android:ellipsize="end" android:id="@+id/device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:singleLine="true"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:ellipsize="end" android:id="@+id/sub_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true"/>
    </LinearLayout>
    <TextView android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/device_operate" android:background="@drawable/room_manager_btn_add" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="27dp" android:maxWidth="90dp" android:paddingStart="2dp" android:paddingEnd="2dp"/>
</LinearLayout>
