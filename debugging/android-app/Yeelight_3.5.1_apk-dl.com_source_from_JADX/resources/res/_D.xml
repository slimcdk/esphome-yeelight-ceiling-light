            <TextView android:gravity="center" android:id="@+id/yeelight_appstore" android:background="@drawable/common_button" android:layout_width="match_parent" android:layout_height="@dimen/device_offline_radian_btn_height" android:layout_marginBottom="10dp" android:text="@string/yeelight_appstore" android:layout_marginStart="@dimen/device_offline_cherry_padding_left" android:layout_marginEnd="@dimen/device_offline_cherry_padding_left" style="@style/device_offline_prompt_text_style2"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
