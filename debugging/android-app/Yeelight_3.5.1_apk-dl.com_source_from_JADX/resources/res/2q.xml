<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/title_view" android:layout_width="match_parent" android:layout_height="44dp">
        <ImageView android:id="@+id/img_back_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_yeelight_back_black" android:layout_marginStart="7dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/img_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_yeelight_curtain_correct" android:layout_centerInParent="true"/>
    <ImageView android:id="@+id/img_config_progress" android:layout_width="155dp" android:layout_height="155dp" android:src="@drawable/icon_yeelight_curtaion_config_loading" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:textSize="18sp" android:textColor="@color/common_text_color_primary_33" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/config_page_init_title"/>
            <TextView android:textSize="13sp" android:textColor="@color/common_text_color_secondary_66" android:id="@+id/tv_sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/config_page_init_subtitle" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2"/>
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:textSize="@dimen/font_size_14sp" android:textColor="@color/white" android:id="@+id/btn_start" android:background="@drawable/round_btn_red" android:layout_width="match_parent" android:layout_height="39dp" android:text="@string/config_page_init_bottom_action_button" android:textAllCaps="false" android:layout_marginStart="55dp" android:layout_marginEnd="55dp" style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
