<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="end" android:id="@+id/view_close_dialog" android:layout_width="22dp" android:layout_height="22dp" android:layout_marginTop="9dp" android:src="@drawable/icon_yeelight_common_dialog_close" android:layout_marginEnd="9dp"/>
    <TextView android:textSize="18sp" android:textColor="@color/common_text_color_primary_33" android:ellipsize="end" android:layout_gravity="center_horizontal" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/welcome_use_yeelight_app" android:maxLines="1"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginLeft="27dp" android:layout_marginTop="18dp" android:layout_marginRight="27dp" android:layout_marginBottom="18dp">
        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/privacy_new_content1"/>
                <View android:layout_width="1dp" android:layout_height="5dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/privacy_new_content2"/>
                <View android:layout_width="1dp" android:layout_height="5dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/privacy_new_content3"/>
                <View android:layout_width="1dp" android:layout_height="5dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/privacy_new_content4"/>
                <View android:layout_width="1dp" android:layout_height="5dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/privacy_new_content5"/>
                <View android:layout_width="1dp" android:layout_height="5dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/common_text_color_secondary_66" android:id="@+id/tv_privacy" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/btn_layout_left_right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="27dp" android:layout_marginRight="27dp" android:layout_marginBottom="27dp">
        <Button android:ellipsize="end" android:id="@+id/dialog_btn_left" android:layout_width="match_parent" android:layout_height="44dp" android:text="@string/privacy_refuse" android:maxLines="1" android:layout_weight="1" style="@style/yl_dialog_btn_cancel_style"/>
        <View android:id="@+id/yl_dialog_btn_space" android:layout_width="12dp" android:layout_height="1px"/>
        <Button android:ellipsize="end" android:id="@+id/dialog_btn_right" android:layout_width="match_parent" android:layout_height="44dp" android:text="@string/privacy_agree" android:maxLines="1" android:layout_weight="1" style="@style/yl_dialog_btn_confirm_style"/>
    </LinearLayout>
</LinearLayout>
