<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.yeelight.cherry.p141ui.view.CherrySearchCircleView android:id="@+id/progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    <ImageView android:id="@+id/common_middle_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/miband_icon" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/common_title_text_size" android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="55dp" android:text="@string/common_text_mi_band"/>
        <TextView android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:text="@string/mi_band_common_sub_title" android:alpha="0.6"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="25dp">
            <Button android:textSize="@dimen/common_title_info_text_size" android:textColor="@color/text_white" android:layout_gravity="center_horizontal" android:id="@+id/miband_bottom_btn" android:background="@drawable/radian_btn_bg" android:layout_width="@dimen/long_button_w" android:layout_height="@dimen/common_button_h" android:text="@string/mi_band_single_btn_text_quick" android:alpha="0.7"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp">
                <Button android:textSize="14sp" android:textColor="@color/text_white" android:id="@+id/double_btn_left" android:background="@drawable/common_dialog_btn_left" android:layout_width="0dp" android:layout_height="@dimen/common_button_h" android:text="@string/common_text_cancel" android:layout_weight="1"/>
                <Button android:textSize="14sp" android:textColor="@color/text_white" android:id="@+id/double_btn_right" android:background="@drawable/common_dialog_btn_right" android:layout_width="0dp" android:layout_height="@dimen/common_button_h" android:text="@string/common_text_ok" android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
