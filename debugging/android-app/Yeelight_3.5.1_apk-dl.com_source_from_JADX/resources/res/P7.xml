<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/swipe_reveal_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:dragEdge="2" app:modeSwipe="0">
    <LinearLayout android:orientation="horizontal" android:background="@color/common_color_secondary_white_f8" android:layout_width="wrap_content" android:layout_height="90dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="31dp" android:paddingEnd="31dp">
            <ImageView android:layout_gravity="center" android:id="@+id/img_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/common_list_side_delete"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/item_layout" android:background="@drawable/common_item_selector" android:layout_width="match_parent" android:layout_height="90dp">
        <ImageView android:layout_gravity="center" android:id="@+id/remote_img" android:layout_width="75dp" android:layout_height="75dp" android:layout_marginStart="10dp" android:layout_marginEnd="3dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginEnd="20dp">
            <TextView android:textSize="@dimen/font_size_16sp" android:textColor="@color/common_text_color_primary_33" android:ellipsize="end" android:id="@+id/remote_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="-1dp" android:maxLines="1"/>
            <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/common_text_color_secondary_66" android:id="@+id/remote_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
