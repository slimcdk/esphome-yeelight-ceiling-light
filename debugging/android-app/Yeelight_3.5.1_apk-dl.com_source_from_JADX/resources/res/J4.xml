<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="90dp" android:paddingStart="20dp" android:paddingEnd="30dp">
    <ImageView android:layout_gravity="center" android:id="@+id/device_item_badge_view" android:layout_width="58dp" android:layout_height="58dp"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="10dp">
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="#333333" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/device_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/music_mode_beat_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_yeelight_beat_normal" android:layout_marginEnd="3dp"/>
            <TextView android:textSize="@dimen/font_size_12sp" android:textColor="#666666" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/device_item_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/device_item_action_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/device_item_action_update_firmware" android:visibility="gone" android:layout_width="26dp" android:layout_height="26dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progressbar_rotate"/>
    </FrameLayout>
</LinearLayout>
