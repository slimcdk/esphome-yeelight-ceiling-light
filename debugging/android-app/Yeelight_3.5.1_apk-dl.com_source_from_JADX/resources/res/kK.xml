<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="91dp">
    <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="90dp">
        <ImageView android:id="@+id/device_img" android:layout_width="60dp" android:layout_height="60dp" android:scaleType="fitXY" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_marginEnd="14dp" android:layout_alignParentStart="true"/>
        <CheckBox android:id="@+id/device_check" android:background="@drawable/list_item_room_widget_check" android:clickable="false" android:layout_width="18dp" android:layout_height="18dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/common_text_color_primary_33" android:ellipsize="end" android:id="@+id/device_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_centerVertical="true" android:layout_marginEnd="14dp" android:layout_toStartOf="@+id/device_check" android:layout_toEndOf="@+id/device_img"/>
    </RelativeLayout>
    <View android:background="@color/common_color_secondary_white_f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginStart="20dp"/>
</LinearLayout>
