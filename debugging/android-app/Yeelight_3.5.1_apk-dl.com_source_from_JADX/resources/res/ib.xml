                    </LinearLayout>
                    <View android:background="@color/common_divider_line_content_color" android:layout_width="1px" android:layout_height="29dp"/>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="@dimen/font_size_14sp" android:textStyle="bold" android:textColor="@color/common_text_color_secondary_66" android:gravity="center_horizontal" android:id="@+id/flow_item_bright_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
                        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_text_bright"/>
                    </LinearLayout>
                    <View android:background="@color/common_divider_line_content_color" android:layout_width="1px" android:layout_height="29dp"/>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="@dimen/font_size_14sp" android:textStyle="bold" android:textColor="@color/common_text_color_secondary_66" android:id="@+id/flow_item_duration_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="10:06.9"/>
                        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/common_text_color_secondary_66" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personality_light_add_duration"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.chauthai.swipereveallayout.SwipeRevealLayout>
    </FrameLayout>
</LinearLayout>
