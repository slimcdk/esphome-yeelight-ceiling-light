<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/swipe_reveal_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginEnd="10dp" app:dragEdge="2" app:modeSwipe="0">
    <LinearLayout android:id="@+id/layout_right_view" android:background="@color/common_color_secondary_white_f8" android:layout_width="wrap_content" android:layout_height="90dp" android:paddingStart="30dp" android:paddingEnd="20dp">
        <ImageView android:layout_gravity="center" android:id="@+id/img_hide_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/common_list_side_delete"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:background="@android:color/transparent" android:layout_width="10dp" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/firmware_update_item_layout" android:background="@drawable/rectangle_corner" android:layout_width="match_parent" android:layout_height="90dp" android:paddingStart="20dp" android:paddingEnd="20dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <ImageView android:layout_gravity="center" android:id="@+id/device_item_badge_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
                <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/common_text_color_primary_33" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/device_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
                <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/common_text_color_secondary_66" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/device_item_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            </LinearLayout>
            <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="58dp">
                <TextView android:textSize="@dimen/font_size_12sp" android:gravity="center" android:layout_gravity="center" android:id="@+id/device_item_action_view" android:layout_width="wrap_content" android:layout_height="27dp" android:maxWidth="67dp" android:minWidth="58dp" android:singleLine="true" android:paddingStart="2dp" android:paddingEnd="2dp"/>
                <ProgressBar android:layout_gravity="center" android:id="@+id/device_item_action_update_state" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progressbar_rotate"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
