<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal" android:background="@color/white" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/device_icon" android:layout_width="58dp" android:layout_height="58dp" android:src="@drawable/icon_yeelight_device_badge_luna_big"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_weight="1">
        <TextView android:textSize="@dimen/font_size_15sp" android:id="@+id/device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text=""/>
        <TextView android:textSize="@dimen/font_size_12sp" android:id="@+id/sub_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text=""/>
    </LinearLayout>
    <CheckBox android:layout_gravity="center_vertical" android:id="@+id/device_checkbox" android:background="@drawable/radio_button_v3" android:layout_width="18dp" android:layout_height="18dp" android:checked="true" android:button="@null"/>
</LinearLayout>
