<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/firmware_update_item_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="90dp" android:paddingStart="20dp" android:paddingEnd="20dp">
    <ImageView android:layout_gravity="center" android:id="@+id/device_item_badge_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="10dp">
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/common_text_color_primary_33" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/device_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/common_text_color_secondary_66" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/device_item_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
    </LinearLayout>
    <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/common_text_color_white" android:gravity="center" android:layout_gravity="center" android:id="@+id/device_item_action_view" android:background="@drawable/common_corner_rectangle_solid_red" android:layout_width="wrap_content" android:layout_height="27dp" android:maxWidth="67dp" android:minWidth="58dp" android:text="@string/firmware_update" android:singleLine="true" android:paddingStart="2dp" android:paddingEnd="2dp"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/device_item_action_update_firmware" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progressbar_rotate"/>
    </FrameLayout>
</LinearLayout>
